<!DOCTYPE html>
<html lang='en'>
<head>
  <% include ./partials/head %>
</head>
<body class='container-fluid'>
  <header>
    <nav class='navbar navbar-fixed-top navbar-light bg-faded'>
      <div class="nav navbar-nav">
        <a class='navbar-brand' href='/'>DynamoDB Admin</a>
        <a class='nav-item nav-link' href='/'>
          Tables
        </a>
      </div>
    </nav>

    <ol class='breadcrumb'>
      <a class='breadcrumb-item' href='/'>Home</a>
      <a class='breadcrumb-item active'><%= Table.TableName %></a>
    </ol>

    <ul class="nav nav-tabs">
      <li class="nav-item">
        <a class="nav-link active" href="/tables/<%= Table.TableName %>">
          Items (<%= Table.ItemCount %>)
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/tables/<%= Table.TableName %>/meta">Meta</a>
      </li>
    </ul>
  </header>

  <main>
    <table class="table">
      <tbody>
        <% for(var i = 0; i < Items.length; i++) { %>
          <tr>
            <th scope="row" style="font-size: 0.85rem;">
              <a href="/tables/<%= Table.TableName %>/items/<%= Items[i].id %>">
                <%= Items[i].id %>
              </a>
            </th>
            <td><pre><%= JSON.stringify(Items[i], null, 2) %></pre></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </main>
</body>
</html>
